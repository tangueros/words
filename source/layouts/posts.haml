= wrap_layout :layout do
  %article.container
    %h1.entry-title= current_page.title
    %p
      %time.caps.published(datetime="#{current_article.date.strftime('%Y')}-#{current_article.date.strftime('%m')}-#{current_article.date.strftime('%d')} #{current_article.date.strftime('%H:%M:%S')}")
        = current_article.date

    %main.main.hentry(role="main")
      .row
        .col
          - if current_article.data.thumb
            - pix = "thumbs/" + current_article.data.thumb
          - if current_article.data.cover
            - pix = "covers/" + current_article.data.cover
          = image_tag pix,
            :class=>"img img-thumbnail",
            :style=>"height:15rem;"
        .col
          .entry-content= yield
