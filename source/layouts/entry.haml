= wrap_layout :layout do
  %article.container
    %b Lexicon Entry
    %h1.entry-title
      = current_page.title
      = current_page.data.term
    %p
      %time.caps.published(datetime="#{current_article.date.strftime('%Y')}-#{current_article.date.strftime('%m')}-#{current_article.date.strftime('%d')} #{current_article.date.strftime('%H:%M:%S')}")
        = current_article.date

    %main.main.hentry(role="main")
      .row
        .col
          .entry-content= yield
        .col
          %dl
            %dt Category
            %dd= current_page.data.cat
            %dt Skill
            %dd= current_page.data.skill
            %dt Also
            %dd= current_page.data.also


